<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.scyllacore.dumpWeb.commonModule.db.mapper.auth.LoginMapper">

    <select id="selectUserInfoForIdValidCheck" parameterType="AuthDTO" resultType="AuthDTO">
        SELECT USER_ID
        FROM user_info_tb
        WHERE USER_ID = #{userId}
    </select>

    <select id="selectUserInfoForPwdValidCheck" parameterType="AuthDTO" resultType="AuthDTO">
        SELECT USER_ID_IDX,
               USER_ID,
               USER_TYPE,
               TRIAL_CHK
        FROM user_info_tb
        WHERE USER_ID = #{userId}
          AND USER_PWD = SHA2(#{userPwd}, 256)
    </select>

    <select id="selectDriverInfo" parameterType="AuthDTO" resultType="DriverDTO">
        SELECT *
        FROM driver_tb
        WHERE USER_ID_FK = #{userIdIdx}
    </select>

    <select id="selectSubmitterInfo" parameterType="AuthDTO" resultType="SubmitterDTO">
        SELECT *
        FROM submitter_tb
        WHERE USER_ID_FK = #{userIdIdx}
    </select>

</mapper>


