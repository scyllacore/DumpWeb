<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.scyllacore.dumpWeb.commonModule.db.mapper.login.PasswordChangeMapper">

    <update id="updateUserPassword" parameterType="LoginDTO">
        UPDATE user_info_tb
        SET USER_PWD = SHA2(#{userPwd}, 256)
        WHERE USER_ID_IDX = #{userIdIDX}
    </update>

</mapper>


