<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.scyllacore.dumpWeb.commonModule.db.mapper.login.LoginMapper">

    <!--  ID 체크  -->
    <select id="selectUserInfoForValidCheck" parameterType="Login" resultType="Login">
        SELECT userId FROM tsitepw WHERE userId = #{userId}
    </select>

    <!--  로그인 정보 체크  -->
    <select id="selectUserInfo" parameterType="Login" resultType="Login">
        SELECT * FROM tsitepw WHERE userId = #{userId} AND userPw = SHA2(#{userPw}, 256)
    </select>

</mapper>


